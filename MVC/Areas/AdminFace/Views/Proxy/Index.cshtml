@model IEnumerable<ProxyGateway.Middleware.ProxyDataModel>
@using MVC
@using MVC.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MVC
@addTagHelper *, ViewsCommon
@addTagHelper *, TableView
@addTagHelper *, FormView
@addTagHelper *, TreeView
@addTagHelper *, GridView
@addTagHelper *, ChartView
@addTagHelper *, ComboboxView
@addTagHelper *, ContextMenuView
@{
    ViewData["Title"] = "Сегменты приложения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Службы </h1>

<p>
    <a href="/AdminFace/Proxy/Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Path)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.Path)">перейти</a> |
                    <a href="/AdminFace/Proxy/Edit?id=@item.ID">Редактировать</a> |
                    <a href="/AdminFace/Proxy/Details?id=@item.ID">Подробнее</a> |
                    <a href="/AdminFace/Proxy/Delete?id=@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
